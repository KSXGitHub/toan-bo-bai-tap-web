common-height = 24px

body
  font-family 'Roboto', 'Product Sans', 'Segoe UI', 'Arial', serif

button
  background blue
  color white
  border none
  &:hover
    box-shadow 0px 0px 2px black
  &:active
    background #3939ed

input
  padding = 0.5em
  border 0px
  border-bottom 1px solid blue
  padding-left padding
  padding-right padding

input:focus
  outline none
  box-shadow 0px 1px 0px blue

input, output
  font-size 1.2em

.error
  color red

#main-form > div
  display block
  *
    display inline-block
    vertical-align bottom
  .input-container
    display block
    padding-top 5px

#input-container
  label
    width 127px
    height common-height
    text-align right
  input
    width 512px
    height common-height

#button-container
  padding-top 10px
  button
    width 127px
    height common-height

#main-footer
  font-size 0.75em
