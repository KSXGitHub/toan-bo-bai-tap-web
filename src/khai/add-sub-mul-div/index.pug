extends ../../../lib/layout.pug

block everything
  mixin num-input(id)
    .input-container(id = id + '-container')
      label(for = id)= dash2cspc(id)
      input(id = id name = id type = 'text' placeholder = 'Insert number here...' required)
      span.error.message(id = id + '-message')
  mixin calc-button(name)
    button(id = 'calc-' + name + '-button' type = 'button')= dash2cspc(name)

  html
    head
      meta(charset = 'utf-8')
      title Simple Calculus
      +style('style/main.css')

    body
      form#main-form
        #input-container
          +num-input('operand-left')
          +num-input('operand-right')
        #button-container
          +calc-button('add')
          +calc-button('subtract')
          +calc-button('multiply')
          +calc-button('divide')
        #output-container
          output#output

      footer#main-footer
        hr

