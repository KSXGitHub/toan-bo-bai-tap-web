body
  font-family 'Roboto', 'Product Sans', 'Segoe UI', 'Verdana', 'Geneva', 'Arial', 'Helvetica', sans-serif

a
  text-decoration underline
  cursor pointer
  color blue
  &:hover
    color red
  &:active
    color orange

button
  border 1px solid black
  background #fff
  padding 5px
  &:hover
    background #ddd
  &:active
    background #aaa

input:not([type='checkbox']):not([type='radio'])
  border 1px solid black
  padding 5px

footer
  font-size 0.75em
  .copyright
    margin auto
    &, & > p
      display inline-block
    & > p
      text-align center
      width 256px

:not(b):not(.bold)
  font-weight normal

:not(i):not(.italic)
  font-style normal

:not(u):not(.underline):not(a)
  text-decoration none

#control-panel
  *
    display inline-block
  & > :not(:first-child)
    margin-left 5px
  & > :not(:last-child)
    margin-right 5px

#list
  margin 0px
  padding 0px
  &, & li
    display block
    width 100%
  li
    &:hover
      background rgba(0, 0, 0, 0.25)
    *
      display inline-block
    .checkbox:checked
      & + .text
        font-weight bold
    .text
      font-family 'Ubuntu Mono', 'consolas', 'Lucida Console', 'Courier New', monospace
    .delete
      position absolute
      right 10px

#control-panel
  margin-top 10px
  margin-bottom 10px
